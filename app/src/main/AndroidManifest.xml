<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aliz.khoshkshoooooo">
    <uses-permission android:name="android.permission.INTERNET"/>
    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true"></supports-screens>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".ui.Splash" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.ClothesDetail" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.Basket" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.Customer" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.Bill" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.ChoiceClothesKind" android:screenOrientation="portrait"></activity>
        <activity android:name=".ui.Login" android:screenOrientation="portrait"></activity>

    </application>


</manifest>
