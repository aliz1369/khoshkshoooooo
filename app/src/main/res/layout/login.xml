<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    >

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/login_ivLogo"
        android:layout_marginTop="20dp"
        android:tint="#0b73f9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_ivLogo"
        android:text="ورود"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/login_tvLogo"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="نام کاربری"
        android:gravity="start"
        android:textAlignment="textStart"
        android:ems="10"
        android:id="@+id/login_etUsername"
        android:layout_below="@id/login_tvLogo"
        android:singleLine="true"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_username"
        android:drawablePadding="5dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:maxLength="11"
        tools:ignore="MissingPrefix"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        fontPath="IRANYekanMobileLight.ttf"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="رمز عبور"
        android:gravity="start"
        android:textAlignment="textStart"
        android:ems="10"
        android:id="@+id/login_etPassword"
        android:layout_below="@id/login_etUsername"
        android:singleLine="true"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_password"
        android:drawablePadding="5dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:maxLength="11"
        tools:ignore="MissingPrefix"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        fontPath="IRANYekanMobileLight.ttf"/>
    <Button
        android:text="ورود"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"
        android:layout_below="@id/login_etPassword"
        android:layout_marginTop="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/loginbtn"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="برای استفاده از این اپلیکیشن نام کاربری و رمز عبور را از شرکت دریافت نمایید."
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="#0b73f9"
        android:layout_marginTop="20dp"
        android:layout_below="@id/login_button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/login_etUsername"
        android:layout_alignStart="@+id/login_etUsername"
        android:layout_alignRight="@+id/login_etUsername"
        android:layout_alignEnd="@+id/login_etUsername"
        android:id="@+id/login_tvDescribe"/>

</RelativeLayout>